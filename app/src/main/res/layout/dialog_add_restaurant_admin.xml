<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal">

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/inputRestaurant"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp" />

    <!-- Tên quán ăn -->
    <EditText
        android:id="@+id/addRestaurantName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapWords"
        android:background="@drawable/rounded_edit"
        android:hint="@string/inputRestaurantName"
        android:layout_marginBottom="10dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral40" />

    <!-- Địa chỉ -->
    <EditText
        android:id="@+id/addAddress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences"
        android:background="@drawable/rounded_edit"
        android:hint="Nhập địa chỉ"
        android:layout_marginBottom="10dp"
        android:minHeight="48dp"
        android:textColor="@color/black"
        android:textColorHint="@color/material_dynamic_neutral40" />

    <!-- Thành phố -->
    <Spinner
        android:id="@+id/addLocation"
        android:background="@drawable/rounded_edit"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:autofillHints="Chọn thành phố"
        android:minHeight="48dp"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>
    <!-- Loại quán ăn -->
    <Spinner
        android:id="@+id/addRoleRestaurant"
        android:background="@drawable/rounded_edit"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:minHeight="48dp"
        android:autofillHints="Chọn loại quán"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </Spinner>


    <!-- Chọn ảnh -->

    <EditText
        android:id="@+id/addDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_edit"
        android:textColor="@color/black"
        android:layout_marginBottom="10dp"
        android:minHeight="48dp"
        android:hint="@string/inputDetails"
        android:textColorHint="@color/material_dynamic_neutral40"
        android:ems="10"
        android:inputType="textMultiLine" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnChooseImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/item_admin_background"
            android:text="@string/chooseImage"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="@string/nothingThere"
            android:textColorHint="@color/gray"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnChooseImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/item_admin_background"
            android:text="@string/chooseImage"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textImage1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="@string/nothingThere"
            android:textColorHint="@color/gray"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnChooseImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/item_admin_background"
            android:text="@string/chooseImage"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textImage2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="@string/nothingThere"
            android:textColorHint="@color/gray"
            android:background="@color/white"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal"
        android:layout_gravity="start"
        android:gravity="center_vertical">

        <Button
            android:id="@+id/btnChooseImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="10dp"
            android:background="@drawable/item_admin_background"
            android:text="@string/chooseImage"
            android:textColor="@color/black" />

        <TextView
            android:id="@+id/textImage3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:hint="@string/nothingThere"
            android:textColorHint="@color/gray"
            android:background="@color/white"/>
    </LinearLayout>

    <!-- Nút hành động -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnSave"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_primary"
            android:text="@string/save"
            android:textColor="@color/white"
            android:textSize="16sp" />

        <Button
            android:id="@+id/btnDismiss"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/button_primary"
            android:text="@string/cancel"
            android:textColor="@color/white"
            android:textSize="16sp" />
    </LinearLayout>
</LinearLayout>
