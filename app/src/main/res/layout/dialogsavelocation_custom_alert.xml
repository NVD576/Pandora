<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/dialog_background"
    android:gravity="center_horizontal">

    <!-- Biểu tượng -->
    <ImageView
        android:id="@+id/iconAlert"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/baseline_warning_24"
        android:layout_gravity="center"
        android:contentDescription="Icon Alert"
        android:layout_marginBottom="15dp"/>

    <!-- Tiêu đề -->
    <TextView
        android:id="@+id/titleAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thông báo"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-medium"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"/>

    <!-- Nội dung -->
    <TextView
        android:id="@+id/messageAlert"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Bạn cần đăng nhập để sử dụng tính năng này."
        android:textSize="16sp"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_marginVertical="15dp"/>

    <!-- Nút hành động -->
    <Button
        android:id="@+id/btnPositive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_primary"
        android:text="OK"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="15dp"/>
</LinearLayout>
