<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Home">

    <!-- Thanh tìm kiếm (Search toolbar stays at the top) -->
    <LinearLayout
        android:id="@+id/search_toolbar_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/lavender_light"
        android:elevation="4dp"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- Search bar -->
        <EditText
            android:id="@+id/search_toolbar"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="1"
            android:background="@drawable/search_background"
            android:drawableStart="@drawable/outline_search_24"
            android:gravity="center_vertical"
            android:hint="Tìm kiếm..."
            android:imeOptions="actionDone"
            android:padding="8dp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textColorHint="@color/lavender_dark" />

        <!-- Save icon -->
        <ImageView
            android:id="@+id/save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="8dp"
            android:contentDescription="@string/bookmark_icon"
            android:src="@drawable/outline_bookmark_add_24" />
    </LinearLayout>

    <!-- Nội dung cuộn (Content Scroll) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="56dp"
        android:fillViewport="true">

        <!-- LinearLayout chứa toàn bộ nội dung -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- ViewPager2 để hiển thị hình ảnh -->
            <androidx.viewpager2.widget.ViewPager2
                android:id="@+id/viewPager"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:padding="10dp" />

            <!-- Layout cho các chấm dưới ViewPager -->
            <LinearLayout
                android:id="@+id/dotsLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:orientation="horizontal" />

            <!-- GridLayout cho các nút -->
            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:columnCount="2"
                android:gravity="center"
                android:rowCount="2">

                <!-- Các nút khác nhau -->
                <Button
                    android:id="@+id/btnAddReview"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="Thêm Đánh Giá"
                    android:textColor="@color/darkPurple" />

                <Button
                    android:id="@+id/btnReviewList"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="Danh Sách Đánh Giá"
                    android:textColor="@color/darkPurple" />

                <Button
                    android:id="@+id/btnLocation"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="Địa Điểm"
                    android:textColor="@color/darkPurple" />

                <Button
                    android:id="@+id/btnShare"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_columnWeight="1"
                    android:layout_margin="8dp"
                    android:background="@drawable/rounded_button"
                    android:text="Chia Sẻ"
                    android:textColor="@color/darkPurple" />
            </GridLayout>

            <!-- RecyclerView để hiển thị các bài đánh giá -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerViewReviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/widget_background"
                android:padding="10dp"
                tools:listitem="@layout/item_review" />
        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</FrameLayout>
