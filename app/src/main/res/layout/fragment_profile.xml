<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_gradient"
    tools:context=".Profile">

    <View
        android:layout_width="match_parent"
        android:layout_height="163dp"
        android:background="@drawable/view_bottom_curve"/>

    <!-- Nội dung chính -->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:padding="20dp">

        <!-- Hình đại diện người dùng -->
        <ImageView
            android:id="@+id/userImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:background="@drawable/circle_background"
            android:clipToOutline="true"
            android:padding="10dp"
            android:scaleType="centerCrop"
            android:src="@drawable/person_icon" />


        <!-- Tên người dùng hoặc nút Đăng nhập -->
        <TextView
            android:id="@+id/loginProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_button"
            android:gravity="center"
            android:paddingHorizontal="20dp"
            android:paddingVertical="10dp"
            android:text="@string/signIn"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <!-- Danh sách chức năng -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:orientation="vertical">

            <!-- Mỗi mục sử dụng CardView hoặc bo góc -->
            <TextView
                android:id="@+id/changeInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:drawableStart="@drawable/baseline_person_24"
                android:drawablePadding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/changeInfomation"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/favourite"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:drawableStart="@drawable/favourite_icon"
                android:drawablePadding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/favourite"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:drawableStart="@drawable/baseline_exit_to_app_24"
                android:drawablePadding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/logout"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/adminMode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:background="@drawable/item_background"
                android:drawableStart="@drawable/baseline_admin_panel_settings_24"
                android:drawablePadding="12dp"
                android:foreground="?android:attr/selectableItemBackground"
                android:gravity="center_vertical"
                android:padding="16dp"
                android:text="@string/administrator"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
