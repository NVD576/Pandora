<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/btnHadAccount"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/pandora_background">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="40sp"
            android:text="@string/joinPandora" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="221dp"
            android:layout_height="367dp"
            android:layout_gravity="center"
            app:srcCompat="@drawable/pandora_logo" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/white"
            android:layout_margin="10dp"
            android:textSize="20sp"
            android:text="@string/description" />

        <Button
            android:id="@+id/btnStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button_background"
            android:textColor="@color/black"
            android:text="Bắt đầu" />

        <Button
            android:id="@+id/btnHadAcc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@drawable/visiblebutton_background"
            android:textColor="@color/black"
            android:text="Tôi đã có tài khoản rồi" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>