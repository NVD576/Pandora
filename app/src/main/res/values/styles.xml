<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorControlActivated">@color/lavender_dark</item>
        <item name="android:textColorHint">@color/lavender_medium</item>
        <item name="android:textColor">@color/lavender_dark</item>
    </style>
    <style name="CustomSpinnerStyle" parent="Widget.AppCompat.Spinner.DropDown">
        <item name="android:popupBackground">@color/white</item>
        <item name="android:dividerHeight">1dp</item>
        <item name="android:divider">@color/white</item>
    </style>
    <style name="ModernActiveTextStyle" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:fontFamily">@font/roboto_bold</item>
    </style>
    <style name="ModernInactiveTextStyle" parent="TextAppearance.AppCompat.Small">
        <item name="android:textColor">@color/darkGray</item>
        <item name="android:fontFamily">@font/roboto_regular</item>
    </style>
    <style name="DialogAnimation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
</resources>