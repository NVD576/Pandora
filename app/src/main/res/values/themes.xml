<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Pandora" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <item name="android:statusBarColor">@color/lavender_light</item>
        <item name="android:windowLightStatusBar">true</item>
    </style>

    <style name="Theme.Pandora" parent="Base.Theme.Pandora" />

    <style name="Theme.Pandora.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Light mode -->
    <style name="SCREEN">
        <item name="android:background">#F4F4F4</item>
    </style>
    
    <!-- Text light mode-->
    <style name="TEXT">
        <item name="android:textColor">#000000</item>
    </style>

    <style name="Theme.Pandora.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Pandora.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Theme.Navigation" parent="Base.Theme.Pandora">
        <item name="colorControlHighlight">@android:color/transparent</item>
    </style>


</resources>